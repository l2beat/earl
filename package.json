{
  "name": "earljs",
  "description": "Ergonomic, modern and type-safe assertion library",
  "keywords": [
    "assert",
    "assertion",
    "assertions",
    "modern",
    "mocha",
    "chai",
    "jest",
    "typescript",
    "test",
    "testing",
    "unit",
    "tdd",
    "bdd",
    "expect",
    "exception"
  ],
  "repository": "git@github.com:earl-js/earl.git",
  "author": "Kris Kaczor <chris@kaczor.io>",
  "license": "MIT",
  "version": "0.1.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "mocha.js",
    "dist/**/*"
  ],
  "scripts": {
    "start": "ts-node -T ./src/index.ts",
    "format": "prettier --check \"./**/*.{ts,md}\"",
    "format:fix": "prettier --write \"./**/*.{ts,md}\"",
    "lint": "eslint --ext .ts src test",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc -p ./tsconfig.prod.json",
    "build:watch": "yarn clean && tsc -p ./tsconfig.json --watch",
    "test": "mocha --config ./test/.mocharc.js",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn typecheck && yarn test",
    "prepublishOnly": "yarn lint && yarn format && yarn typecheck && yarn test && yarn build"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lodash": "^4.17.15",
    "pretty-format": "^26.1.0",
    "ts-essentials": "^6.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.0",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-typestrict": "^1.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unused-imports": "^0.1.2",
    "mocha": "^8.2.1",
    "prettier": "^2.0.5",
    "sinon": "^8.0.1",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.8.3"
  }
}
