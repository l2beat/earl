{
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}
